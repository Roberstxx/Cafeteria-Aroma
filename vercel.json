{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://jarbs-portafolio.vercel.app https://*.vercel.app"
        },
        { "key": "Referrer-Policy", "value": "no-referrer-when-downgrade" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://jarbs-portafolio.vercel.app"
        }
      ]
    }
  ]
}
